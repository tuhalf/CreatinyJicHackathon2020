    <div class="container">
      <div class="row">
        <div class="col-md-8 mx-auto">
          <h1 class="mb-3">Güncel İstekler</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="container bootstrap snippets bootdey">
              <div class="row">
                <div class="panel panel-default widget">
                  <div class="panel-heading">
                    <span class="glyphicon glyphicon-comment"></span>
                  </div>
                  <div class="panel-body">
                    <ul class="list-group">
                      {{#each loc}}
                      <li class="list-group-item">
                        <div class="row">
                          <div class="col-xs-12 col-md-12" style="width: 100%;">
                            <div>
                              <a href="#" style="font-size: x-large;">{{head}}</a>
                              <div class="mic-info"> <a href="#">{{user}}</a> Tarih:{{date}}</div>
                            </div>
                            <div class="comment-text"> {{text}} </div>
                            <div class="action">
                              <button type="button" class="btn btn-success btn-xs" title="Talep">
                                <span class="glyphicon glyphicon-ok"></span>
                              </button>
                            </div>
                          </div>
                        </div>
                      </li>
                      {{/each}}
                    </ul>
                    <a href="#" class="btn btn-info btn-sm btn-block" role="button"><span class="glyphicon glyphicon-refresh"></span> More</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
